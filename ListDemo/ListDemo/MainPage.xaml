<Page
    x:Class="ListDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="各种控件对比"/>
            <Button x:Name="btnGridView" Content="GridView" Click="btnGridView_Click" />
            <Button x:Name="btnListView" Content="ListView" Click="btnListView_Click" />
            <Button x:Name="btnListBox" Content="ListBox" Click="btnListBox_Click" />
            <Button x:Name="btnItemsControl" Content="ItemsControl" Click="btnItemsControl_Click"/>
            <Button x:Name="btnPivot" Content="Pivot" Click="btnPivot_Click"/>
            <Button x:Name="btnFlipView" Content="FlipView" Click="btnFlipView_Click" />
            <Button x:Name="btnSplitView" Content="SplitView" Click="btnSplitView_Click" />
        </StackPanel>
    </Grid>
</Page>
